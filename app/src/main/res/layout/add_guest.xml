<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="44dp"
        android:layout_weight="1"
        android:text="Name"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/genderTextView"
        app:layout_constraintEnd_toStartOf="@+id/guestName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EventTextView" />

    <TextView
        android:id="@+id/genderTextView"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignEnd="@+id/nameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/nameTextView"
        android:layout_marginBottom="47dp"
        android:layout_marginStart="44dp"
        android:text="Gender"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/ageTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTextView" />

    <TextView
        android:id="@+id/ageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/nameTextView"
        android:layout_marginBottom="51dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="44dp"
        android:text="Age"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toStartOf="@+id/guestAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderTextView" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gestEmail"
        android:layout_alignLeft="@+id/genderTextView"
        android:layout_alignStart="@+id/genderTextView"
        android:layout_marginBottom="47dp"
        android:layout_marginEnd="46dp"
        android:layout_marginStart="44dp"
        android:text="Email"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/notesTextView"
        app:layout_constraintEnd_toStartOf="@+id/gestEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageTextView" />

    <TextView
        android:id="@+id/notesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/guestAddBtn"
        android:layout_alignEnd="@+id/textView13"
        android:layout_alignRight="@+id/textView13"
        android:layout_marginBottom="123dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="44dp"
        android:text="Notes"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guestNotes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/guestAddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/side_nav_bar"
        android:text="ADD"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guestNotes"
        app:layout_constraintTop_toBottomOf="@+id/guestNotes" />

    <TextView
        android:id="@+id/EventTextView"
        android:layout_width="102dp"
        android:layout_height="0dp"
        android:layout_alignBaseline="@+id/spinner3"
        android:layout_alignBottom="@+id/spinner3"
        android:layout_alignLeft="@+id/nameTextView"
        android:layout_alignStart="@+id/nameTextView"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:text="Event"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="serif"
        app:layout_constraintBottom_toTopOf="@+id/nameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/guestAddBtn"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/guestAddBtn"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="33dp"
        android:entries="@array/event_array"
        app:layout_constraintBottom_toTopOf="@+id/guestName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/EventTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/guestName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nameTextView"
        android:layout_alignBottom="@+id/nameTextView"
        android:layout_alignLeft="@+id/spinner3"
        android:layout_alignStart="@+id/spinner3"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/guestGender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameTextView"
        app:layout_constraintTop_toBottomOf="@+id/spinner3" />

    <Spinner
        android:id="@+id/guestGender"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:layout_alignEnd="@+id/spinner3"
        android:layout_alignRight="@+id/spinner3"
        android:layout_alignTop="@+id/ageTextView"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="105dp"
        android:entries="@array/gender_array"
        android:prompt="@string/gender_prompt"
        app:layout_constraintBottom_toTopOf="@+id/guestAge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/genderTextView"
        app:layout_constraintTop_toBottomOf="@+id/guestName" />

    <EditText
        android:id="@+id/guestAge"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_above="@+id/textView13"
        android:layout_alignEnd="@+id/guestName"
        android:layout_alignRight="@+id/guestName"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="105dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/gestEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ageTextView"
        app:layout_constraintTop_toBottomOf="@+id/guestGender" />

    <EditText
        android:id="@+id/gestEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/guestName"
        android:layout_alignStart="@+id/guestName"
        android:layout_below="@+id/ageTextView"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="39dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/guestNotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/guestAge" />

    <EditText
        android:id="@+id/guestNotes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBaseline="@+id/notesTextView"
        android:layout_alignBottom="@+id/notesTextView"
        android:layout_alignLeft="@+id/guestGender"
        android:layout_alignStart="@+id/guestGender"
        android:layout_marginBottom="22dp"
        android:layout_marginEnd="39dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toTopOf="@+id/guestAddBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/notesTextView"
        app:layout_constraintTop_toBottomOf="@+id/gestEmail" />

</android.support.constraint.ConstraintLayout>
